
<nav class="navbar navbar-light ">
  <span class="navbar-brand mb-0 h1">Cocktails</span>
  <%= link_to 'Create a new cocktail', new_cocktail_path, class: "btn btn-outline-secondary"  %>
</nav>

<div class="container 100vh">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card-category m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1560963689-b5682b6440f8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1372&q=80)">
          <%= link_to cocktail.name, cocktail_path(cocktail)  %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="footer card-footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> at Le Wagon
  </div>
</div>
