
<nav class="navbar navbar-light ">
  <span class="navbar-brand mb-0 h1">Cocktails</span>
  <%= link_to 'Create a new cocktail', new_cocktail_path, class: "btn btn-outline-secondary"  %>
</nav>

<div class="container">
  <div class="cards d-flex justify-content-around align-items-center">
    <% @cocktails.each do |cocktail| %>
        <div class="card-category flex-grow-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1560963689-b5682b6440f8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1372&q=80)">
          <%= link_to cocktail.name, cocktail_path(cocktail)  %>
        </div>
    <% end %>
  </div>


</div>

