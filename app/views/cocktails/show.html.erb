<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80)">
  <%= @cocktail.name %>
</div>

<div class="container text-center">
  <ul class= "list group mt-3 mr-3">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item"><%= dose.description %>
        <%= dose.ingredient.name %> -
        <%= link_to 'ðŸ—‘', dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete it?" } %>
      </li>
    <% end %>
  </ul>
  <div class="photo m-3 mx-auto">
    <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>

  <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: "btn btn-flat"  %>
  <%= link_to "Back to list", cocktails_path, class: "btn btn-flat"  %>
</div>
